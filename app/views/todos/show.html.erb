<h1>To Do detail</h1>
<div class="todo-detail">
  <div class="row">
    <div class="col-md-3">
      <h2>Description:</h2>
    </div>
    <div class="col-md-9">
      <p><%= @todo.description %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <h2>Completed:</h2>
    </div>
    <div class="col-md-9">
      <p><%= @todo.completed %></p>
    </div>
  </div>
</div>